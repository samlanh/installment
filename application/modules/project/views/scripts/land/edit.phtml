	}
}
var StreetStore  = getDataStorefromJSON('id','name', <?php print_r(Zend_Json::encode($this->street));?> );
function addNewStreet(){
	if(dijit.byId('frm_street').validate()) {
		var Itemmake = {					
				id: dijit.byId('newStreet').get('value'),
			    name: dijit.byId('newStreet').get('value')
		};		
		addDataToSelectbox(dijit.byId('street'), StreetStore, Itemmake, dijit.byId('newStreet').get('value'));	
		dijit.byId('newStreet').attr('value',dijit.byId('newStreet').get('value'));
		dijit.byId('frm_street').reset();
		dijit.byId('frm_street').hide();
		dijit.byId('save_street').set('disabled',true);
	}
}

var propertyType_store  = getDataStorefromJSON('id','name', <?php print_r(Zend_Json::encode($this->pro_type));?> );
