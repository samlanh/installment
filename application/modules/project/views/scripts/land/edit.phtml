			onChange: function() {
				showPopupForm();
			}  
		}, "property_type");
});
function calCulateSize(){
	width = dijit.byId("width").get('value');
	height = dijit.byId("height").get('value');
	totalsize = width*height;
	dijit.byId("size").attr('value',totalsize);
	}
function showPopupForm(){
	dijit.byId('save_property').set('disabled',false);
	property_type = dijit.byId('property_type').get('value');
	if(property_type==''){
		alert('Please Select Property Type');
		dijit.byId('property_type').focus();
		return false;
	}else if(property_type==-1){
		dijit.byId('frm_propertytype').show();
	}
}
url_property = '<?php echo $this->url(array('module'=>'project','controller'=>'propertiestype','action'=>'add-propertytype'));?>';
function addNewPropertytype(){
	if(dijit.byId('frm_propertytype').validate()) {
		dijit.byId('save_property').set('disabled',true);
		dojo.xhrPost({
			url:url_property,	
			form:dojo.byId('form_propertytype'),
			handleAs:"json",
			load: function(data) {
				var Itemmake = {					
						id: data,
					    name: dijit.byId('type_nameen').get('value')
				};		
				addDataToSelectbox(dijit.byId('property_type'), propertyType_store, Itemmake, data);
				dijit.byId('property_type').attr('value',data);	
				dijit.byId('frm_propertytype').reset();
				dijit.byId('frm_propertytype').hide();
				dijit.byId('save_property').set('disabled',false);
			},
			error: function(err) {
			}
		});
	}
}
function CalculatePrice(){
	house_price = dijit.byId('house_price').get('value');
	land_price = dijit.byId('land_price').get('value');
	var price = Number(house_price + land_price);
	dijit.byId('price').attr('value',price);
}
function calCulateFullSize(){
	width = dijit.byId("width_land").get('value');
	height = dijit.byId("height_land").get('value');
	totalsize = width*height;
	dijit.byId("full_size").attr('value',totalsize);
}
var old_title = '<?php echo $this->row['land_address'];?>';
url_CheckTitle = '<?php echo $this->url(array('module'=>'project','controller'=>'land','action'=>'check-title'));?>';
function checkTitle(){
	title = dijit.byId('land_address').get('value');
	branch_id = dijit.byId('branch_id').get('value');
	street = dijit.byId('street').get('value');
	if(title=='' || street=='' || title==old_title){ document.getElementById('message').innerHTML ='';return false;}
	dojo.xhrPost({
		url:url_CheckTitle,	
		content:{ 
			'branch_id': branch_id , 'land_address': title,'street': street
		},
		handleAs:"json",
		load: function(data) {	
			if(data !== false ){
		   		document.getElementById('message').innerHTML ='លេខផ្ទះ/ឡូតិ៍នេះមានរួចរាល់ហើយ';
		   		dijit.byId('land_address').focus();
			}else{
				document.getElementById('message').innerHTML ='';
			}
		},
		error: function(err) {
		}
	});
}
