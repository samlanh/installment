function getAllAmountPrpertyByBranch(){
	branch_id = dijit.byId('branch_id').get('value');
	if(branch_id==0 || branch_id==-1){
		return false;
	}
	dojo.xhrPost({
		url:url_getPropertyByBranch,	
		content:{ 
			'branch_id': branch_id
		},
		handleAs:"json",
		load: function(data) {	
			
		   if(data==1){
			   checkAmountHouse=0;
		   }else{
			   checkAmountHouse=1;
		   }
		},
		error: function(err) {
			alert(err);
		}
	});
}
