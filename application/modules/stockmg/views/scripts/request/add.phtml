	var urlGetAllProduct = '<?php echo $this->url(array('module'=>'stockmg','controller'=>'request','action'=>'getallproduct')); ?>';
	function getAllProduct(){
		dijit.byId('productId').reset();
		productStore  = getDataStorefromJSON('id','name', <?php print_r(Zend_Json::encode(array()));?> );
		dijit.byId('productId').set('store', productStore);
		
		branch_id = dijit.byId('branch_id').get('value');
		if(branch_id=='' || branch_id<=0){
			//alert('<?php echo $tr->translate('PLEASE_SELECT_BRANCH');?>');
			//dijit.byId('branch_id').focus();
			return false;
		}
		categoryId = dijit.byId('categoryId').get('value');
		if(categoryId=='' || categoryId==0){
			categoryId=0;
		}
		dojo.xhrPost({
			url:urlGetAllProduct,	
			content:{ 
				'branch_id':branch_id,'categoryId':categoryId
			},		    
			handleAs:"json",
			load: function(data) {
				productStore  = getDataStorefromJSON('id','name', data);		
				dijit.byId('productId').set('store', productStore);
			},
			error: function(err) {
			}
		});
	}
	var urlGetRequestNo = '<?php echo $this->url(array('module'=>'stockmg','controller'=>'request','action'=>'getrequestno')); ?>';
	function getRequestNoByBranch(){
		
		branch_id = dijit.byId('branch_id').get('value');
		if(branch_id=='' || branch_id<=0){
			//alert('<?php echo $tr->translate('PLEASE_SELECT_BRANCH');?>');
			//dijit.byId('branch_id').focus();
			return false;
		}
		dateRequest = dijit.byId('date').get('value');
		if(dateRequest==''){
			alert('<?php echo $tr->translate('PLEASE_SELECT_DATE');?>');
			dijit.byId('date').focus();
			return false;
		}
			var a = new Date(dateRequest);
			mm = a.getMonth()+1;
			var dd = a.getDate();
			 if(dd<10){
				 dd = "0"+dd;
			}
			//month = returnMOnth(mm);
			month=mm;
			if(mm<10){
				 month = "0"+mm;
			}
			
			var y = a.getFullYear();
			var dateRequest = dd +'-'+month+'-'+y ;
	
		dojo.xhrPost({
			url:urlGetRequestNo,	
			content:{ 
				'branch_id':branch_id,'dateRequest':dateRequest
			},		    
			handleAs:"json",
			load: function(data) {
				dijit.byId('requestNo').set('value', data);
			},
			error: function(err) {
			}
		});
	} 	
	
