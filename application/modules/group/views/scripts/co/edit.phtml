var oldUserName = '<?php echo empty($this->datainuser['user_name'])?"":$this->datainuser['user_name'];?>';
var url_checkusername = '<?php echo $this->url(array('module'=>'group','controller'=>'co','action'=>'checkusername')); ?>';
function getCheckUserName(){
	user_name = dijit.byId('user_name').get('value');
	dojo.xhrPost({
		url:url_checkusername,	
		content:{ 
		    'user_name':user_name,
		},		    
		handleAs:"json",
		load: function(data) {
			if(data==1){
				if(oldUserName == user_name){
					isCheck=0;
				}else{
					alert('<?php echo $tr->translate("This user name has been use on other accont");?>');
					dijit.byId('user_name').focus();
					isCheck=1;
				}
			}else{
				isCheck=0;
			}
		},
		error: function(err) {
		}
	});
}
