<script type="text/javascript">
function Checkchange(){
  if (dojo.byId("check_change").checked){
	  dijit.byId('password').set('required',true); 
	  dijit.byId('password').set('readonly',false); 
	 
  }else{
	  $('#password').val('');
	  dijit.byId('password').set('required',false); 
	  dijit.byId('password').set('readonly',true); 
  }
}
function CheckCreatUser(){
	  if(dojo.byId("check_create").checked){
		  dijit.byId('user_name').set('required',true); 
		  dijit.byId('user_name').set('readonly',false); 
		  dijit.byId('user_type').set('required',true); 
		  dijit.byId('user_type').set('readonly',false); 
		  dijit.byId('password').set('required',true); 
		  dijit.byId('password').set('readonly',false); 
		  dijit.byId('password').set('disabled', false);
		  dijit.byId('user_name').set('disabled', false);
		  dijit.byId('user_type').set('disabled', false);
	  }else{
		  $('#password').val('');
		  dijit.byId('user_name').set('required',false); 
		  dijit.byId('user_name').set('readonly',true);
		  dijit.byId('user_type').set('required',false); 
		  dijit.byId('user_type').set('readonly',true);
		  dijit.byId('password').set('required',false); 
		  dijit.byId('password').set('readonly',true);
		  dijit.byId('password').set('disabled', true);
		  dijit.byId('user_name').set('disabled', true);
		  dijit.byId('user_type').set('disabled', true);
	  }
}
