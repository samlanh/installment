<script type="text/javascript">
var other_store  = getDataStorefromJSON('id','name', <?php print_r(Zend_Json::encode($this->knowby));?> );
require(["dojo/ready"], function(ready){
	new dijit.form.FilteringSelect({
		name: "know_by",
		id: "know_by",
		autoComplete: false,
		queryExpr: "*${0}*",     
		searchAttr: "name",
		class: 'fullside',
		onChange: function() {
			popUpKnowBy();
	    }
	}, "know_by");
});
function popUpKnowBy(){
	var know_by =  dijit.byId('know_by').get('value');
	if(know_by==-1){
		dijit.byId("frm_datapop").show();
	}
}
var url_branch = '<?php echo $this->url(array('module'=>'group','controller'=>'customer','action'=>'addnewdata')); ?>';
function addData(){
	if(dijit.byId('form_popup').validate()){
		loadingBlock();
		dojo.xhrPost({
			url:url_branch,
			form: dojo.byId("form_popup"),
			handleAs:"json",
			load: function(data) {
				var Itemmake = {					
						id: data,
						name: dijit.byId('title').get('value')
				};
				addDataToSelectbox(dijit.byId('know_by'),other_store , Itemmake, data);	
				dijit.byId('form_popup').reset();
				dijit.byId("frm_datapop").hide();
				HideloadingBlock();
			},
			error: function(err) {
				HideloadingBlock();
			}
		});
	}
}
function showstatusreq(){
	statusreq = dijit.byId('statusreq').get('value');
	if(statusreq==''){
		alert("<?php echo $tr->translate("PLEASE_SELECT_STATUS")?>");
		dijit.byId('statusreq').focus();
		return false;
	}else if(statusreq==-1){
		dijit.byId('frm_statusreq').show();
	}
}
var statusreqStore  = getDataStorefromJSON('id','name', <?php print_r(Zend_Json::encode($this->statusreq));?> );
function addNewstatusreq(){
	if(dijit.byId('frm_statusreq').validate()){
		dijit.byId('save_status').set('disabled',true);
		var Itemmake = {					
				id: dijit.byId('newstatusreq').get('value'),
			    name: dijit.byId('newstatusreq').get('value')
		};		
		addDataToSelectbox(dijit.byId('statusreq'), statusreqStore, Itemmake, dijit.byId('newstatusreq').get('value'));	
		dijit.byId('newstatusreq').attr('value',dijit.byId('newstatusreq').get('value'));
		dijit.byId('frm_statusreq').reset();
		dijit.byId('frm_statusreq').hide();
		dijit.byId('save_status').set('disabled',false);
	}
}
</script>