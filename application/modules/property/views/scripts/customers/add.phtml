var document_type_url = '<?php echo $this->url(array('module'=>'group','controller'=>'index','action'=>'insert-document-type'));?>';
function addNewDocumentType(){
	//alert(1);
	type = dijit.byId('type').get('value');
	old_client_doc = dijit.byId('client_d_type').get('value');
	old_join_doc = dijit.byId('join_d_type').get('value');
	
	dojo.xhrPost({
		
		url:document_type_url,	
		form:dojo.byId('frm_client_doc_type'),
		handleAs:"json",
		load: function(data) {	
		
			var myNewItem = {					
				id: data,
				name: dijit.byId('doc_name').get('value')
			};			
			addDataToSelectbox(dijit.byId('client_d_type'), d_datastore, myNewItem, data);	
			addDataToSelectbox(dijit.byId('join_d_type'), joint_doc_type_store, myNewItem, data);				
				 
			dijit.byId('frm_client_doc_type').reset();
			dijit.byId('popup_doc_type').hide();
			if(type == 2){
				dijit.byId('client_d_type').attr('value',old_client_doc);
			}else{
				dijit.byId('join_d_type').attr('value',old_join_doc);
			}
	
		},
		error: function(err) {
			alert(err);
		}
	});	
}
