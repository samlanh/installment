	function calculateamount(index){
		var totalQtyReceive = dijit.byId('totalQtyReceive'+index).get('value');
		totalQtyReceive=isNaN(totalQtyReceive)?0:totalQtyReceive;
		
		var price = dijit.byId('price'+index).get('value');
		price=isNaN(price)?0:price;
		
		discountPercent = dijit.byId('discountPercent'+index).get('value');
		discountPercent=isNaN(discountPercent)?0:discountPercent;
		if(discountPercent>100){
			discountPercent=100;
		}
		
		var discountAmount = dijit.byId('discountAmount'+index).get('value');
		discountAmount=isNaN(discountAmount)?0:discountAmount;
		
		rowTotal = (totalQtyReceive*price);
		
		discountPercentAmt = parseFloat(rowTotal*discountPercent/100);
		
		subtotal = rowTotal-discountPercentAmt;
		
		if(discountAmount>subtotal){
			dijit.byId('subTotal'+index).set('value',0);
			dijit.byId('discountAmount'+index).set('value',subtotal);
			infoMessageAlert("<?php echo $tr->translate("DISCOUNT_CAN_NOT_BIGER_THAN_TOTAL")?>"+" "+subtotal);
			netTotal();
			return false;
		}
		
		
		subtotal = subtotal-discountAmount;
		dijit.byId('subTotal'+index).set('value',subtotal.toFixed(3));
		
		totalDiscount = (discountAmount+discountPercentAmt).toFixed(3);
		dijit.byId('totalDiscount'+index).set('value',totalDiscount);
		calculateRowAmount();
		netTotal();
	}
	
