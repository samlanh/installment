	function deleteRecord(index) {
		var identityinv = $('#invIdentity').val();
		var arraysDn = identityinv.split(',');
		
		var identity = $('#identity').val();
		var arrays = identity.split(',');
		for(var i=0;i<arrays.length;i++) {
			if(arrays[i] == index){
				arrays.splice(i,1);
				arraysDn.splice(i,1);
			}
		}
