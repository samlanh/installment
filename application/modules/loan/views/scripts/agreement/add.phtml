		branch_id = dijit.byId('branch_id').get('value');
		if(branch_id==-1 || branch_id==""){
			return false;
		}
		dojo.xhrPost({
			url:url_getSaleClien,	
			content:{ 
				'branch_id': branch_id, 'sale_id':'',
