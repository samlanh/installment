<script type="text/javascript">
dojo.require('dijit.form.CheckBox');
dojo.require('dijit.form.NumberTextBox');

	function ConvertMeasure(){
		measure = dijit.byId('measureId');
		measureId = measure.get('value');
		if(measureId==-1){
			dijit.byId('isConvert').set("checked", false);
			dijit.byId('measureId').focus();
			return false;
		}
		isConvert = dijit.byId('isConvert').get('value');
		if(isConvert==1){
			measureLable = measure.attr('displayedValue');
			dojo.byId('convert').innerHTML ="1 "+measureLable+" = ";
			dojo.byId('measureLabel').innerHTML ="( "+measureLable+" )";
		}
	}
	function checkCutStock(){
		 dijit.byId('isCutStock').attr('value',1);
		isService = dijit.byId('isService').get('value');
		if(isService==1){
			 dijit.byId('isCutStock').attr('value',0);
		}
	}

	
	function readURL(input) {
	    if (input.files && input.files[0]) {
	        var reader = new FileReader();
	        reader.onload = function (e) {
	            $('#profile_wiew').attr('src', e.target.result);
	        }
	        reader.readAsDataURL(input.files[0]);
	    }
	}
	$("#photo").change(function(){
	    readURL(this);
	});

	function bs_input_file() {
		$(".input-file").before(
			function() {
			if ( ! $(this).prev().hasClass('input-ghost') ) {
				var element = $("<input  type='file' accept='image/*' class='input-ghost' style='visibility:hidden; height:0'>");
				element.attr("name",$(this).attr("name"));
				element.change(function(){
					element.next(element).find('input').val((element.val()).split('\\').pop());
				});
				$(this).find("button.btn-choose").click(function(){
					element.click();
				});
				$(this).find('input').css("cursor","pointer");
				$(this).find('input').mousedown(function() {
					$(this).parents('.input-file').prev().click();
					return false;
				});
				return element;
			}
		}
	   );
	}
	
	$(function() {
		bs_input_file();
	});
